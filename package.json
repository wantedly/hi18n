{
  "name": "root",
  "private": true,
  "packageManager": "yarn@4.9.4",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Apt run build",
    "clean": "yarn workspaces foreach -Ap run clean",
    "fmt": "yarn workspaces foreach -Ap run fmt",
    "fmt:check": "yarn workspaces foreach -Ap run fmt:check",
    "lint": "yarn build && yarn lint:nobuild",
    "lint:nobuild": "yarn workspaces foreach -Ap --exclude root run lint",
    "test": "yarn build && yarn test:nobuild",
    "test:nobuild": "yarn workspaces foreach -Ap --exclude root run test --watch=false",
    "tsc": "yarn build && yarn tsc:nobuild",
    "tsc:nobuild": "yarn workspaces foreach -Ap --exclude root run tsc"
  },
  "devDependencies": {
    "@changesets/cli": "patch:@changesets/cli@npm%3A2.29.6#~/.yarn/patches/@changesets-cli-npm-2.29.6-ac8361deb8.patch",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-plugin": "^5.0.6",
    "eslint-plugin-jest": "^27.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.7.1",
    "typescript": "^5.9.2"
  },
  "resolutions": {
    "pretty-format/react-is": "^19.0.0",
    "eslint-visitor-keys@npm:^3.3.0": "patch:eslint-visitor-keys@npm%3A3.3.0#~/.yarn/patches/eslint-visitor-keys-npm-3.3.0-d329af7c8c.patch"
  }
}
