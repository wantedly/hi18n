{
  "name": "root",
  "private": true,
  "packageManager": "yarn@4.9.4",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "clean": "yarn workspaces foreach -Ap run clean && rm -f '*.tsbuildinfo'",
    "fmt": "prettier -w .",
    "fmt:check": "prettier -c .",
    "lint": "yarn build && yarn lint:nobuild",
    "lint:nobuild": "yarn eslint .",
    "setup": "yarn install && husky",
    "test": "yarn build && yarn test:nobuild",
    "test:nobuild": "yarn vitest",
    "tsc": "tsc --build"
  },
  "devDependencies": {
    "@changesets/cli": "patch:@changesets/cli@npm%3A2.29.6#~/.yarn/patches/@changesets-cli-npm-2.29.6-ac8361deb8.patch",
    "@eslint/js": "^9.34.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/eslint-plugin": "^1.3.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-plugin": "^7.0.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  },
  "resolutions": {
    "pretty-format/react-is": "^19.0.0",
    "eslint-visitor-keys@npm:^3.3.0": "patch:eslint-visitor-keys@npm%3A3.3.0#~/.yarn/patches/eslint-visitor-keys-npm-3.3.0-d329af7c8c.patch"
  }
}
