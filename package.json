{
  "name": "root",
  "private": true,
  "packageManager": "yarn@4.9.4",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Apt run build",
    "fmt": "yarn workspaces foreach -Ap run fmt",
    "fmt:check": "yarn workspaces foreach -Ap run fmt:check",
    "lint": "yarn build && yarn lint:nobuild",
    "lint:nobuild": "yarn workspaces foreach -Ap --exclude root run lint",
    "test": "yarn build && yarn test:nobuild",
    "test:nobuild": "yarn workspaces foreach -Ap --exclude root run test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@yarnpkg/sdks": "^3.0.0-rc.22",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-plugin": "^5.0.6",
    "eslint-plugin-jest": "^27.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "typescript": "^4.8.2"
  },
  "resolutions": {
    "jest-resolve": "patch:jest-resolve@npm:28.1.1#.yarn/patches/jest-resolve-npm-28.1.1-5f1937a1f8.patch",
    "jest-resolve@28.1.1": "patch:jest-resolve@npm:28.1.1#.yarn/patches/jest-resolve-npm-28.1.1-5f1937a1f8.patch"
  }
}
