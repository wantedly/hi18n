{
  "name": "@hi18n/tools-core",
  "version": "0.1.6",
  "description": "Common definitions for @hi18n/cli",
  "keywords": [
    "intl",
    "i18n",
    "internationalization",
    "locale",
    "localization",
    "globalization",
    "format",
    "formatting",
    "translate",
    "translation",
    "hi18n"
  ],
  "homepage": "https://github.com/wantedly/hi18n#readme",
  "bugs": {
    "url": "https://github.com/wantedly/hi18n/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wantedly/hi18n.git",
    "directory": "packages/tools-core"
  },
  "author": "Masaki Hara <ackie.h.gmai@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "cjs/**/*",
    "src/**/*",
    "!**/*.test.*"
  ],
  "type": "module",
  "main": "./cjs/dist/index.js",
  "exports": {
    "require": "./cjs/dist/index.js",
    "default": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rimraf dist cjs/dist '*.tsbuildinfo'",
    "fmt": "yarn workspace root prettier -w ./packages/tools-core",
    "fmt:check": "yarn workspace root prettier -c ./packages/tools-core",
    "lint": "yarn workspace root eslint ./packages/tools-core",
    "prepack": "$npm_execpath run clean && $npm_execpath run build",
    "test": "vitest",
    "tsc": "tsc --build"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
