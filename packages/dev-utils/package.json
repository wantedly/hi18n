{
  "name": "@hi18n/dev-utils",
  "version": "0.1.0",
  "private": true,
  "description": "Internal utilities for hi18n development",
  "keywords": [
    "intl",
    "i18n",
    "internationalization",
    "locale",
    "localization",
    "globalization",
    "format",
    "formatting",
    "translate",
    "translation",
    "hi18n"
  ],
  "homepage": "https://github.com/wantedly/hi18n#readme",
  "bugs": {
    "url": "https://github.com/wantedly/hi18n/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wantedly/hi18n.git",
    "directory": "packages/dev-utils"
  },
  "author": "Masaki Hara <ackie.h.gmai@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@3.2.3",
  "files": [
    "dist/**/*",
    "!dist/*.tsbuildinfo",
    "src/**/*",
    "!src/**/*.test.ts"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "scripts": {
    "babel": "babel -x .ts src -d dist --source-maps --ignore '**/*.d.ts,**/*.test.ts,src/__fixtures__/**/*,src/testing/**/*'",
    "build": "yarn babel && yarn tsc",
    "clean": "rimraf dist",
    "fmt": "prettier . -w",
    "fmt:check": "prettier . -c",
    "lint": "eslint 'src/**/*.ts' .eslintrc.js babel.config.js",
    "prepack": "yarn clean && yarn build",
    "test": "jest",
    "tsc": "tsc --build"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.3",
    "commander": "^9.2.0",
    "core-js-pure": "^3.23.2",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.1.2",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "babel-jest": "^29.1.2",
    "babel-plugin-polyfill-corejs3": "^0.6.0",
    "eslint": "^8.24.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.2"
  }
}
