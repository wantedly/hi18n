{
  "name": "@hi18n/dev-utils",
  "version": "0.1.5",
  "private": true,
  "description": "Internal utilities for hi18n development",
  "keywords": [
    "intl",
    "i18n",
    "internationalization",
    "locale",
    "localization",
    "globalization",
    "format",
    "formatting",
    "translate",
    "translation",
    "hi18n"
  ],
  "homepage": "https://github.com/wantedly/hi18n#readme",
  "bugs": {
    "url": "https://github.com/wantedly/hi18n/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wantedly/hi18n.git",
    "directory": "packages/dev-utils"
  },
  "author": "Masaki Hara <ackie.h.gmai@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "cjs/**/*",
    "src/**/*",
    "!src/**/*.test.ts"
  ],
  "type": "module",
  "main": "./cjs/dist/index.js",
  "exports": {
    "require": "./cjs/dist/index.js",
    "default": "./dist/index.js"
  },
  "scripts": {
    "build": "$npm_execpath run build:esm && $npm_execpath run build:cjs",
    "build:cjs": "tsc -p tsconfig.build-cjs.json",
    "build:esm": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist cjs/dist",
    "lint": "eslint 'src/**/*.ts' eslint.config.js",
    "prepack": "$npm_execpath run clean && $npm_execpath run build",
    "test": "vitest",
    "tsc": "tsc"
  },
  "dependencies": {
    "commander": "^9.2.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-n": "^17.21.3",
    "prettier": "^3.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
