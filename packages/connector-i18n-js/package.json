{
  "name": "@hi18n/connector-i18n-js",
  "version": "0.1.4",
  "description": "Converter between i18n-js and @hi18n/core",
  "keywords": [
    "intl",
    "i18n",
    "internationalization",
    "locale",
    "localization",
    "globalization",
    "format",
    "formatting",
    "translate",
    "translation",
    "hi18n"
  ],
  "homepage": "https://github.com/wantedly/hi18n#readme",
  "bugs": {
    "url": "https://github.com/wantedly/hi18n/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wantedly/hi18n.git",
    "directory": "packages/connector-i18n-js"
  },
  "author": "Masaki Hara <ackie.h.gmai@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "cjs/**/*",
    "src/**/*",
    "!src/**/*.test.ts",
    "!src/__fixtures__/**/*"
  ],
  "type": "module",
  "main": "./cjs/dist/index.js",
  "exports": {
    "require": "./cjs/dist/index.js",
    "default": "./dist/index.js"
  },
  "scripts": {
    "build": "$npm_execpath run build:esm && $npm_execpath run build:cjs",
    "build:cjs": "tsc -p tsconfig.build-cjs.json",
    "build:esm": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist cjs/dist",
    "fmt": "prettier . -w",
    "fmt:check": "prettier . -c",
    "lint": "eslint 'src/**/*.ts' .eslintrc.cjs",
    "prepack": "$npm_execpath run clean && $npm_execpath run build",
    "test": "vitest",
    "tsc": "tsc"
  },
  "dependencies": {
    "@hi18n/tools-core": "^0.1.4",
    "glob": "^8.0.3",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@hi18n/core": "*",
    "@hi18n/dev-utils": "*",
    "@types/glob": "^8.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.7.6",
    "eslint": "^8.24.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
