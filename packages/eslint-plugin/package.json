{
  "name": "@hi18n/eslint-plugin",
  "version": "0.2.2",
  "description": "Message internationalization meets immutability and type-safety - ESLint plugin",
  "keywords": [
    "intl",
    "i18n",
    "internationalization",
    "locale",
    "localization",
    "globalization",
    "format",
    "formatting",
    "translate",
    "translation",
    "hi18n",
    "eslint",
    "eslintplugin"
  ],
  "homepage": "https://github.com/wantedly/hi18n#readme",
  "bugs": {
    "url": "https://github.com/wantedly/hi18n/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wantedly/hi18n.git",
    "directory": "packages/eslint-plugin"
  },
  "author": "Masaki Hara <ackie.h.gmai@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "cjs/**/*",
    "src/**/*",
    "!src/**/*.test.ts"
  ],
  "type": "module",
  "main": "./cjs/wrapper.js",
  "exports": {
    ".": {
      "require": "./cjs/wrapper.js",
      "default": "./dist/index.js"
    },
    "./internal-rules": {
      "require": "./cjs/dist/internal-rules.js",
      "default": "./dist/internal-rules.js"
    }
  },
  "scripts": {
    "build": "$npm_execpath run build:esm && $npm_execpath run build:cjs",
    "build:cjs": "tsc -p tsconfig.build-cjs.json",
    "build:esm": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist cjs/dist",
    "fmt": "prettier . -w",
    "fmt:check": "prettier . -c",
    "lint": "eslint 'src/**/*.ts' eslint.config.js",
    "prepack": "$npm_execpath run clean && $npm_execpath run build",
    "test": "vitest",
    "tsc": "tsc"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.42.0",
    "eslint-visitor-keys": "^4.2.1"
  },
  "peerDependencies": {
    "eslint": "^7.0.0 || ^8.0.0 || ^9.0.0",
    "typescript": "*"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@hi18n/core": "*",
    "@hi18n/react": "*",
    "@hi18n/react-context": "*",
    "@types/eslint": "^9.6.1",
    "@types/espree": "^10.1.0",
    "@types/node": "^22.13.14",
    "@typescript-eslint/parser": "^8.42.0",
    "@typescript-eslint/rule-tester": "^8.42.0",
    "@typescript-eslint/types": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-plugin-eslint-plugin": "^7.0.0",
    "eslint-plugin-n": "^17.21.3",
    "espree": "^10.4.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
