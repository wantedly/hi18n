{
  "name": "@hi18n/core",
  "version": "0.1.13",
  "description": "Message internationalization meets immutability and type-safety - core runtime",
  "keywords": [
    "intl",
    "i18n",
    "internationalization",
    "locale",
    "localization",
    "globalization",
    "format",
    "formatting",
    "translate",
    "translation",
    "hi18n"
  ],
  "homepage": "https://github.com/wantedly/hi18n#readme",
  "bugs": {
    "url": "https://github.com/wantedly/hi18n/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wantedly/hi18n.git",
    "directory": "packages/core"
  },
  "author": "Masaki Hara <ackie.h.gmai@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "cjs/**/*",
    "src/**/*",
    "!src/**/*.test.ts"
  ],
  "type": "module",
  "main": "./cjs/dist/index.js",
  "exports": {
    "require": "./cjs/dist/index.js",
    "default": "./dist/index.js"
  },
  "sideEffects": false,
  "scripts": {
    "build": "$npm_execpath run build:esm && $npm_execpath run build:cjs",
    "build:cjs": "tsc -p tsconfig.build-cjs.json",
    "build:esm": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist cjs/dist",
    "fmt": "prettier . -w",
    "fmt:check": "prettier . -c",
    "lint": "eslint 'src/**/*.ts' .eslintrc.cjs",
    "prepack": "$npm_execpath run clean && $npm_execpath run build",
    "test": "vitest",
    "tsc": "tsc"
  },
  "devDependencies": {
    "eslint": "^8.24.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
